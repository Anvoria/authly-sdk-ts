{
    "name": "@authly/sdk",
    "description": "A library for building authentication systems using Authly.",
    "version": "1.1.1",
    "author": {
        "name": "Anvoria",
        "url": "https://github.com/Anvoria"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Anvoria/authly-sdk-ts.git"
    },
    "homepage": "https://github.com/Anvoria/authly-sdk-ts",
    "bugs": {
        "url": "https://github.com/Anvoria/authly-sdk-ts/issues"
    },
    "keywords": [
        "authentication",
        "authorization",
        "authentication-library",
        "authly"
    ],
    "engines": {
        "node": ">=18.0.0",
        "bun": ">=1.0.0"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./react": {
            "types": "./dist/react/index.d.ts",
            "default": "./dist/react/index.js"
        }
    },
    "files": [
        "dist"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "tsc",
        "format": "bunx prettier --write .",
        "lint": "bunx eslint .",
        "lint:fix": "bunx eslint --fix .",
        "test": "tsx --test tests/**/*.test.ts",
        "test:watch": "tsx --test --watch tests/**/*.test.ts",
        "prepublishOnly": "bun run build",
        "prepare": "bunx husky"
    },
    "lint-staged": {
        "*.{ts,json,jsonc,md}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*,{yml,yaml}": [
            "prettier --write"
        ]
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@eslint/json": "^0.14.0",
        "@eslint/markdown": "^7.5.1",
        "@types/bun": "^1.3.4",
        "@types/node": "^25.0.9",
        "@types/react": "^19.2.8",
        "eslint": "^9.39.2",
        "globals": "^17.0.0",
        "husky": "^9.1.7",
        "jiti": "^2.6.1",
        "lint-staged": "^16.2.7",
        "prettier": "^3.7.4",
        "react-dom": "^19.2.3",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.50.0"
    },
    "dependencies": {
        "jose": "^6.1.3"
    },
    "peerDependencies": {
        "react": ""
    },
    "peerDependenciesMeta": {
        "react": {
            "optional": true
        },
        "next": {
            "optional": true
        }
    }
}
