{
    "name": "@authly/sdk",
    "description": "A library for building authentication systems using Authly.",
    "version": "1.0.0",
    "author": {
        "name": "Anvoria",
        "url": "https://github.com/Anvoria"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/Anvoria/authly-sdk.git"
    },
    "homepage": "https://github.com/Anvoria/authly-sdk",
    "bugs": {
        "url": "https://github.com/Anvoria/authly-sdk/issues"
    },
    "keywords": [
        "authentication",
        "authorization",
        "authentication-library",
        "authly"
    ],
    "engines": {
        "node": ">=18.0.0",
        "bun": ">=1.0.0"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "format": "bunx prettier --write .",
        "lint": "bunx eslint .",
        "lint:fix": "bunx eslint --fix .",
        "test": "tsx --test tests/**/*.test.ts",
        "test:watch": "tsx --test --watch tests/**/*.test.ts",
        "prepare": "husky"
    },
    "lint-staged": {
        "*.{ts,json,jsonc,md}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*,{yml,yaml}": [
            "prettier --write"
        ]
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@eslint/json": "^0.14.0",
        "@eslint/markdown": "^7.5.1",
        "@types/bun": "^1.3.4",
        "@types/node": "^24.10.2",
        "eslint": "^9.39.2",
        "globals": "^16.5.0",
        "husky": "^9.1.7",
        "jiti": "^2.6.1",
        "lint-staged": "^16.2.7",
        "prettier": "^3.7.4",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.50.0"
    }
}
